{
  "name": "Worldcoin Email",
  "description": "Anti-spam email addon that makes sure emails were sent by a real human.",
  "version": "0.2",
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*",
        "https://worldcoinemail.org/*",
        "http://localhost:3000/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "192": "icon192.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "scripting",
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/"
  ],
  "manifest_version": 3
}
